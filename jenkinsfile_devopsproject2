pipeline {
    agent any

    tools {
        maven 'maven'
    }

    environment {
        // Safe date format for Docker tags (e.g., 2025-07-15_1932)
        DATE = "${new Date().format('yyyy-MM-dd_HHmm', TimeZone.getTimeZone('IST'))}"
        IMAGE_NAME = "mouna/helloworld-devopsproject2"
    }

    stages {

        stage('Unit Tests') {
            steps {
                sh "mvn clean test"
            }
        }

        stage('Publish Test Results') {
            steps {
                junit 'target/surefire-reports/*.xml'
            }
        }

        stage('Package') {
            steps {
                sh "mvn clean package"
            }
        }

        stage('Upload Artifact') {
            steps {
                sh "mvn clean deploy -s settings.xml"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                echo "Building Docker image with tag: $DATE"
                ls -ltrh
                docker build -t $IMAGE_NAME:$DATE .
                '''
            }
        }

        stage('Push Docker Image') {
    steps {
        withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
            sh '''
                echo "Pushing Docker image: $IMAGE_NAME:$DATE"
                echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                docker push $IMAGE_NAME:$DATE
              '''
        }
    }
}
}

post {
        failure {
            echo 'ðŸš¨ Build failed!'
        }
        success {
            echo "âœ… Build and push successful: $IMAGE_NAME:$DATE"
        }
    }
}
